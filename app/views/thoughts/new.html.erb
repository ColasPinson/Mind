<h1> new Thought </h1>

<%= form_with model: @thought do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        <% @thought.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :body %><br>
        <%= form.text_field :body %>
        <% @thought.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>